{% extends 'layout.html.twig' %}

{% block title %}
  {{ article.title }}
  -
{% endblock %}
{% block content %}

  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/{{ article.image.adress }}')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>{{ article.title }}</h1>
            <h2 class="subheading">{{ article.subTitle }}</h2>
            <span class="post-meta">Publi√© le
              {{ article.publicationDate|date("d/m/Y", false) }}</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          {{ article.content }}
        </div>
      </div>
    </div>
  </article>

{% endblock %}