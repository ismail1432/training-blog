{% extends 'layout.html.twig' %}

{% block content %}
  <!-- Page Header -->
  <header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Test Blog</h1>
            <span class="subheading">Testing, testing, testing...</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main Content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        {% for article in articles %}

          <div class="post-preview">
            <a href="/article-{{ article.id }}">
              <h2 class="post-title">
                {{ article.title }}
              </h2>
              <h3 class="post-subtitle">
                {{ article.subTitle}}
              </h3>
            </a>
            <p class="post-meta">Publi√© le
              {{ article.publicationDate|date("d/m/Y", false) }}</p>
          </div>
          <hr>
        {% endfor %}

        <!-- Pager -->
        <div class="clearfix">
          {% if page > 1 %}
            <a class="btn btn-primary float-left" href="/{{ page-1 }}">&larr; Newer Posts</a>
          {% endif %}
          {% if page < nbPages %}
            <a class="btn btn-primary float-right" href="/{{ page+1 }}">Older Posts &rarr;</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

{% endblock %}